<div class="container mb-3">
  <h1>Add a new bookmark</h1>
  <div class="row justify-content-center">
    <%= simple_form_for [@movie, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.input :movie, collection: Movie.all, input_html: {multiple: true}, include_hidden: false %>
    <%= f.submit "Add a new list", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
